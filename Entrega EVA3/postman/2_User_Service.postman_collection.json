{
  "info": {
    "name": "LevelUp - User Service",
    "description": "Colección para probar el servicio de usuarios",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://144.22.43.202:8082",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Health Check",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/usuarios/health"
      }
    },
    {
      "name": "2. Get All Users",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/usuarios"
      }
    },
    {
      "name": "3. Get Active Users",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/usuarios/activos"
      }
    },
    {
      "name": "4. Get User by ID",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/usuarios/1"
      }
    },
    {
      "name": "5. Get User by Email",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/usuarios/correo/juan.perez@example.com"
      }
    },
    {
      "name": "6. Get Users by Role",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/usuarios/rol/cliente"
      }
    },
    {
      "name": "7. Search Users by Name",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/usuarios/buscar/Juan"
      }
    },
    {
      "name": "8. Create User (Register)",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Maria\",\n  \"apellidos\": \"González\",\n  \"correo\": \"maria.gonzalez@example.com\",\n  \"password\": \"password123\",\n  \"telefono\": \"+56987654321\",\n  \"direccion\": \"Av. Principal 456\"\n}"
        },
        "url": "{{baseUrl}}/api/usuarios/registro"
      }
    },
    {
      "name": "9. Update User",
      "request": {
        "method": "PUT",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Maria\",\n  \"apellidos\": \"González Pérez\",\n  \"telefono\": \"+56987654321\",\n  \"direccion\": \"Nueva Dirección 789\"\n}"
        },
        "url": "{{baseUrl}}/api/usuarios/1"
      }
    },
    {
      "name": "10. Change User Role",
      "request": {
        "method": "PUT",
        "url": "{{baseUrl}}/api/usuarios/1/rol/admin"
      }
    },
    {
      "name": "11. Activate User",
      "request": {
        "method": "PUT",
        "url": "{{baseUrl}}/api/usuarios/1/activar"
      }
    },
    {
      "name": "12. Soft Delete User",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/api/usuarios/1"
      }
    },
    {
      "name": "13. Permanent Delete User",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/api/usuarios/1/permanente"
      }
    }
  ]
}
